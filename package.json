{
  "name": "@gburnett/riot-testing-library",
  "version": "0.1.0",
  "main": "dist/riot-testing-library.cjs.js",
  "module": "dist/riot-testing-library.esm.js",
  "license": "MIT",
  "dependencies": {
    "@testing-library/dom": "6.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@riotjs/compiler": "4.3.9",
    "@testing-library/jest-dom": "4.0.0",
    "babel-jest": "24.9.0",
    "husky": "3.0.3",
    "jest": "24.9.0",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "riot": "4.3.8",
    "rollup": "1.19.4",
    "rollup-plugin-buble": "0.19.8",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-node-resolve": "5.2.0"
  },
  "peerDependencies": {
    "riot": "4.x"
  },
  "scripts": {
    "build:dist": "rollup -c",
    "build:fixtures": "riot fixtures --output tmp",
    "dev": "rollup -c -w",
    "format": "prettier --write --loglevel=silent",
    "test": "jest",
    "pretest": "yarn build:dist && yarn build:fixtures"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{js,json}": [
      "yarn format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "pre-push": [
        "yarn test"
      ]
    }
  }
}
